            <ContentView WidthRequest="100" HeightRequest="100" Background="LightGray" Margin="5">
                <Image Source="https://openweathermap.org/img/w/04n.png" HeightRequest="50" WidthRequest="50" Aspect="AspectFit">
                    <!--<Image.Source>
            <UriImageSource Uri="https://openweathermap.org/img/w/04n.png"  CachingEnabled="False">
                
            </UriImageSource></Image.Source>-->
                </Image>

            </ContentView>




            <ListView x:Name="GroupedForecast" IsGroupingEnabled="True" HasUnevenRows="True">
                <ListView.GroupHeaderTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Label Text="{Binding Key, StringFormat='Date: {0:D}'}" FontSize="20" TextColor="Yellow" />
                        </ViewCell>
                    </DataTemplate>
                </ListView.GroupHeaderTemplate>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Text="{Binding DateTime, StringFormat='Time: {0:HH:mm}'}" FontSize="20" TextColor="White" />
                                <!--<StackLayout Orientation="Horizontal">-->
                                <!--<Image Source="{Binding Icon}" HeightRequest="50" WidthRequest="50" Aspect="AspectFit" BackgroundColor="AliceBlue"/>-->
                                <!--<Label Text="{Binding Icon}" />-->
                                <!--<Image>
                        <Image.Source>
                            <UriImageSource Uri="{Binding Icon}" CachingEnabled="True" CacheValidity="1:0:0" />
                        </Image.Source>
                    </Image>-->
                                <!--<StackLayout Orientation="Vertical">-->
                                <Label Text="{Binding Description}" FontSize="20" TextColor="White" />
                                <Label Text="{Binding Temperature,StringFormat='Temperature: {0}℃'}" FontSize="20" TextColor="White" />
                                <!--</StackLayout>
                    </StackLayout>-->
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>



        </StackLayout>
    </ContentPage.Content>
</ContentPage>