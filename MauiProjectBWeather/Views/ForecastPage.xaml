                                        <Label Text="{Binding Description}" FontSize="20" TextColor="White" />
                                <Label Text="{Binding Temperature,StringFormat='Temperature: {0}℃'}" FontSize="20" TextColor="White" />
                                </StackLayout>
                    </StackLayout>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
